@layout EmptyLayout
@page "/register"

<div class="container mt-3">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<MudCard>
				<MudForm>
					<MudText Class="text-center mt-2 fs-3">Register</MudText>
					<MudCardContent>
						<MudTextField @bind-Value="requestDto.UserName"
									  For="@(() => requestDto.UserName)"
									  Immediate="true"
									  Label="User Name" />

						<MudTextField @bind-Value="requestDto.Email"
									  For="@(() => requestDto.Email)"
									  Immediate="true"
									  Label="Email" />

						<MudTextField @bind-Value="requestDto.Password"
									  For="@(() => requestDto.Password)"
									  Immediate="true"
									  Label="Password" />
					</MudCardContent>
				</MudForm>
				<MudCardActions>
					<MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@RegisterUser">Register</MudButton>
				</MudCardActions>
			</MudCard>
		</div>
	</div>
</div>
